records = new Records();
records.removeCurrentLoadingMore();
<% @records.each do |record| %>
records.appendRecipeToTable("<%=j render record %>");
<% end %>
<% if @records.any? %>
records.appendRecipeToTable("<%=j render partial: 'load_more', locals: { page: params[:page].to_i + 1 } %>");
new Records().checkAndLoadMore()
<% end %>
